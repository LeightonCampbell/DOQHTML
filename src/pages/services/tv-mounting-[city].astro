---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { TV_MOUNTING_CITIES, getServiceAreaText, TV_MOUNTING_FAQS, TV_MOUNTING_REVIEWS } from '../../data/tvMountingCities';

export function getStaticPaths() {
  return TV_MOUNTING_CITIES.map(({ slug, name }) => ({
    params: { city: slug },
    props: {
      citySlug: slug,
      cityName: name,
      serviceAreaText: getServiceAreaText(name),
      metaTitle: `TV Mounting Service ${name} | Same Day Installation | Deals of Quality`,
      metaDescription: `Expert TV wall mounting in ${name}. We hide wires, supply mounts, and install on drywall, brick, or fireplaces. Book online or get a free quote.`,
      canonicalPath: `/services/tv-mounting-${slug}`,
    },
  }));
}

const { cityName, serviceAreaText, metaTitle, metaDescription, canonicalPath } = Astro.props;
const canonical = `https://www.dealsofquality.com${canonicalPath}/`;
---

<BaseLayout title={metaTitle} description={metaDescription} canonical={canonical}>
  <!-- Trust bar -->
  <p class="bg-[#f97415]/10 py-2 text-center text-sm font-medium text-slate-900">
    Trusted by 10,000+ homeowners
  </p>

  <main id="main-content" class="min-h-screen bg-background">
    <!-- Hero -->
    <section
      class="relative flex flex-col justify-end items-center text-center pt-24 pb-10 md:pt-32 md:pb-14 bg-cover bg-center min-h-[320px] md:min-h-[420px]"
      style="background-image: url(/tv-mounting-la-hero.png);"
    >
      <div class="absolute inset-0 bg-black/40" aria-hidden="true"></div>
      <div class="container-max px-4 md:px-8 lg:px-16 relative z-10 flex flex-col items-center justify-end text-center">
        <h1 class="font-display text-3xl md:text-4xl font-bold text-white mb-3">
          TV Mounting in {cityName}
        </h1>
        <p class="text-white/90 max-w-3xl">
          {serviceAreaText}
        </p>
      </div>
    </section>

    <!-- Breadcrumb -->
    <section class="bg-gradient-to-b from-slate-50 to-white px-4 py-4 sm:px-6 lg:px-8 border-b border-slate-200">
      <div class="container-max mx-auto max-w-4xl">
        <nav class="text-sm text-slate-600" aria-label="Breadcrumb">
          <ol class="flex flex-wrap items-center gap-2">
            <li><a href="/" class="hover:text-[#f97415]">Home</a></li>
            <li aria-hidden="true">/</li>
            <li><a href="/services/" class="hover:text-[#f97415]">Services</a></li>
            <li aria-hidden="true">/</li>
            <li class="font-medium text-slate-900">TV Mounting {cityName}</li>
          </ol>
        </nav>
      </div>
    </section>

    <!-- CTA / Tell us needs (static; configurator would be Phase 5) -->
    <section class="section-padding bg-background">
      <div class="container-max px-4 md:px-8 lg:px-16 max-w-4xl">
        <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-6">
          Tell Us About Your TV Mounting Needs
        </h2>
        <p class="text-muted-foreground mb-8">
          Professional wall mounting for any TV size across the {cityName} area. Our vetted pros handle installation, cable management, and leveling. Get a free quote or book online.
        </p>
        <div class="flex flex-wrap items-center gap-4">
          <a href="#booking-modal" data-open-quote class="inline-flex items-center justify-center rounded-lg h-11 px-8 text-base font-semibold bg-primary !text-white hover:bg-primary/90">
            Get a Free Quote
          </a>
          <a href="tel:+18185847389" class="inline-flex items-center gap-2 text-foreground font-medium hover:text-primary">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
            (818) 584-7389
          </a>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="section-padding bg-secondary" aria-labelledby="why-choose-us-heading">
      <div class="container-max px-4 md:px-8 lg:px-16">
        <h2 id="why-choose-us-heading" class="font-display text-2xl md:text-3xl font-bold text-foreground text-center mb-10">
          Why Choose Us
        </h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-4xl mx-auto">
          <div class="flex flex-col items-center text-center">
            <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-4">
              <svg class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" /></svg>
            </div>
            <h3 class="font-display font-semibold text-foreground mb-2">Hidden Wires Experts</h3>
            <p class="text-muted-foreground text-sm leading-relaxed">
              We don't just hang TVs; we make the cables disappear for a clean, cinema-like look.
            </p>
          </div>
          <div class="flex flex-col items-center text-center">
            <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-4">
              <svg class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" /></svg>
            </div>
            <h3 class="font-display font-semibold text-foreground mb-2">Any Wall, Any Time</h3>
            <p class="text-muted-foreground text-sm leading-relaxed">
              Drywall, brick, concrete, or above the fireplace. Our pros have every anchor type needed.
            </p>
          </div>
          <div class="flex flex-col items-center text-center">
            <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mb-4">
              <svg class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
            </div>
            <h3 class="font-display font-semibold text-foreground mb-2">Insured & Vetted</h3>
            <p class="text-muted-foreground text-sm leading-relaxed">
              $1M Liability Insurance and strict background checks on every pro.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="section-padding bg-background" aria-labelledby="how-it-works-heading">
      <div class="container-max px-4 md:px-8 lg:px-16">
        <h2 id="how-it-works-heading" class="font-display text-2xl md:text-3xl font-bold text-foreground text-center mb-10">
          How It Works
        </h2>
        <div class="flex flex-col md:flex-row gap-8 md:gap-6 justify-center items-stretch max-w-4xl mx-auto">
          <div class="flex-1 flex flex-col items-center text-center p-6 rounded-xl border border-border bg-card">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" /></svg>
            </div>
            <span class="font-display font-semibold text-foreground mb-1">1. Book Online</span>
            <p class="text-muted-foreground text-sm">Get a free quote or book your TV mount.</p>
          </div>
          <div class="flex-1 flex flex-col items-center text-center p-6 rounded-xl border border-border bg-card">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1V6a1 1 0 00-1-1h-3a1 1 0 00-1 1v10a1 1 0 001 1h1m-1-4h4" /></svg>
            </div>
            <span class="font-display font-semibold text-foreground mb-1">2. We Arrive</span>
            <p class="text-muted-foreground text-sm">Your pro arrives with the mount and tools.</p>
          </div>
          <div class="flex-1 flex flex-col items-center text-center p-6 rounded-xl border border-border bg-card">
            <div class="w-12 h-12 rounded-full bg-primary/10 flex items-center justify-center mb-3">
              <svg class="w-6 h-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>
            </div>
            <span class="font-display font-semibold text-foreground mb-1">3. You Relax</span>
            <p class="text-muted-foreground text-sm">We mount, level, and clean up in under 90 minutes.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Recent Reviews -->
    <section class="section-padding bg-secondary">
      <div class="container-max">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="font-display text-3xl md:text-4xl font-extrabold text-foreground mb-4">Recent Reviews</h2>
          <p class="text-lg text-muted-foreground">What customers say about our TV mounting service</p>
        </div>
        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {TV_MOUNTING_REVIEWS.map((t) => (
            <article class="bg-card rounded-xl border border-border p-6">
              <div class="flex gap-1 mb-4">
                {[1,2,3,4,5].map(() => (
                  <svg class="w-5 h-5 fill-cta text-cta" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                ))}
              </div>
              <p class="text-muted-foreground mb-4">"{t.quote}"</p>
              <p class="font-semibold text-foreground">{t.author}</p>
              {t.location && <p class="text-sm text-muted-foreground">{t.location}</p>}
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="section-padding bg-background" aria-labelledby="faq-heading">
      <div class="container-max px-4 md:px-8 lg:px-16">
        <h2 id="faq-heading" class="font-display text-2xl md:text-3xl font-bold text-foreground text-center mb-2">
          Frequently Asked Questions
        </h2>
        <p class="text-center text-muted-foreground mb-10">Quick answers about TV mounting in {cityName}</p>
        <div class="max-w-3xl mx-auto space-y-2">
          {TV_MOUNTING_FAQS.map((faq) => (
            <details class="bg-card border border-border rounded-xl px-6 group">
              <summary class="font-display font-semibold text-foreground py-5 cursor-pointer list-none flex items-center justify-between gap-2 [&::-webkit-details-marker]:hidden">
                {faq.q}
                <span class="text-muted-foreground group-open:rotate-180 transition-transform shrink-0">â–¼</span>
              </summary>
              <p class="text-muted-foreground pb-5 leading-relaxed border-t border-border pt-2">{faq.a}</p>
            </details>
          ))}
        </div>
      </div>
    </section>

    <!-- Sticky footer CTA -->
    <div class="fixed bottom-0 left-0 right-0 z-40 border-t border-border bg-card shadow-lg py-3 px-4 md:px-8" style="padding-bottom: max(0.75rem, env(safe-area-inset-bottom));">
      <div class="container-max flex flex-col sm:flex-row items-center justify-between gap-3">
        <span class="font-display font-semibold text-foreground">
          Book TV Install in {cityName}
        </span>
        <a href="#booking-modal" data-open-quote class="inline-flex items-center justify-center rounded-lg h-11 px-8 text-base font-semibold bg-primary !text-white hover:bg-primary/90 w-full sm:w-auto">
          Book Now
        </a>
      </div>
    </div>

    <div class="h-20" aria-hidden="true"></div>
  </main>
</BaseLayout>
