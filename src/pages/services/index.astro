<BaseLayout
  title="All Services | Premium Home Services | Deals Of Quality"
  description="Browse all home services â€” from cleaning and handyman to smart home, electrical, and more. Fast, reliable, vetted local pros."
  canonical={canonical}
>
  <!-- HERO -->
  <section class="services-dir-hero border-b border-slate-200 bg-white pb-8 pt-24 text-center">
    <h1 class="text-4xl font-bold tracking-tight text-slate-900 sm:text-5xl">
      Your Next Project, Handled.
    </h1>
    <p class="mx-auto mt-3 max-w-xl text-base text-slate-500">
      Select a service to view more details or book a vetted local pros.
    </p>
  </section>

  <!-- CATEGORY DIRECTORY GRID -->
  <section class="bg-white px-6 py-14 sm:px-10 lg:px-16">
    <div class="mx-auto max-w-7xl">
      <div class="grid grid-cols-1 gap-x-12 gap-y-16 md:grid-cols-2 lg:grid-cols-3">
        {categories.map((cat) => (
          <div>
            <h2 class="mb-5 text-xl font-semibold text-[#004080]">{cat.title}</h2>
            <ul class="space-y-0">
              {cat.items.map((item) => (
                <li>
                  <a href={item.href} class="group flex items-start gap-3 py-2.5 transition-colors hover:text-[#0073e6]">
                    <!-- Icon -->
                    <span class="mt-0.5 flex h-5 w-5 flex-shrink-0 text-slate-400 transition-colors group-hover:text-[#0073e6]" aria-hidden="true">
                      <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.75" stroke-linecap="round" stroke-linejoin="round" class="h-5 w-5">
                        <path d={item.icon} />
                      </svg>
                    </span>
                    <!-- Text -->
                    <span class="flex flex-col">
                      <span class="flex items-center gap-2">
                        <span class="text-sm font-medium text-slate-800 transition-colors group-hover:text-[#0073e6]">
                          {item.name}
                        </span>
                        {item.isHot && (
                          <span class="inline-flex items-center rounded-sm bg-orange-100 px-1.5 py-0.5 text-[10px] font-bold uppercase tracking-wide text-orange-500">
                            Hot
                          </span>
                        )}
                      </span>
                      <span class="mt-0.5 text-xs text-slate-500">{item.description}</span>
                    </span>
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- MOBILE CTA BAR -->
  <div class="mobile-cta">
    <a href="tel:+18185847389" class="btn-outline" style="flex:1; text-align:center; padding:0.75rem 1rem; font-size:0.9rem;">ðŸ“ž Call Now</a>
    <button type="button" data-open-quote class="btn-primary" style="flex:1; text-align:center; padding:0.75rem 1rem; font-size:0.9rem;">Get Free Quote</button>
  </div>

  <style>
    .services-dir-hero {
      /* Extend under the navbar gracefully */
      margin-top: -4rem;
      padding-top: calc(4rem + 3rem);
    }
  </style>
</BaseLayout>
