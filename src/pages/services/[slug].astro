---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { allServices } from '../../data/servicesData';
import { getServiceLandingContent } from '../../data/serviceLandingData';

export function getStaticPaths() {
  const reserved = ['contact', 'terms', 'privacy', 'join-as-pro', 'remote-support', 'faqs', 'success', 'booking-confirmed', 'quote-received', 'services'];
  return allServices
    .filter((s) => !reserved.includes(s.slug))
    .map((service) => {
      const content = getServiceLandingContent(service.slug, service.label, service.description || '');
      return {
        params: { slug: service.slug },
        props: { service, content },
      };
    });
}

const { service, content } = Astro.props;
const canonical = `https://www.dealsofquality.com/${content.canonicalPath}/`;
---

<BaseLayout
  title={content.metaTitle}
  description={content.metaDescription}
  canonical={canonical}
>
  <main class="flex-1 min-h-screen bg-background">
    <!-- Hero -->
    <section class="relative pt-24 pb-16 md:pt-32 md:pb-24 bg-gradient-to-br from-slate-50 via-blue-50/30 to-gray-50">
      <div class="container-max px-4 md:px-8 lg:px-16">
        <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="order-2 lg:order-1">
            <span class="inline-flex items-center gap-1.5 px-4 py-2 rounded-full bg-primary/10 text-primary text-sm font-semibold border border-primary/20 mb-6">
              {content.heroBadge}
            </span>
            <h1 class="font-display text-[25px] md:text-[31px] lg:text-[43px] font-bold text-foreground mb-6 leading-tight">
              {content.heroTitle}
            </h1>
            <p class="text-lg text-muted-foreground mb-8 max-w-xl leading-relaxed">
              {content.heroSubtitle}
            </p>
            <div class="flex flex-wrap gap-4">
              <button type="button" data-open-booking="true" data-service={service.label} class="inline-flex items-center justify-center rounded-xl h-12 px-8 text-base font-semibold bg-primary !text-white hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all">
                Book Now
              </button>
              <button type="button" data-open-quote="true" data-service={service.label} class="inline-flex items-center justify-center rounded-xl h-12 px-8 text-base font-semibold border-2 border-primary !text-[#004080] bg-transparent hover:bg-primary/10 transition-all">
                Get a Free Quote
              </button>
            </div>
            <div class="flex flex-wrap items-center gap-6 mt-8 pt-8 border-t border-border/50">
              <div class="flex items-center gap-2 text-muted-foreground text-sm">
                <svg class="w-5 h-5 text-primary shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
                <span>Licensed & Insured</span>
              </div>
              <div class="flex items-center gap-2 text-muted-foreground text-sm">
                <svg class="w-5 h-5 text-primary shrink-0" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                <span>Vetted Pros</span>
              </div>
            </div>
          </div>
          <div class="order-1 lg:order-2 relative">
            <div class="relative rounded-2xl overflow-hidden shadow-xl">
              {content.heroImage ? (
                <img src={content.heroImage} alt="" class="w-full h-[320px] md:h-[400px] object-cover" />
              ) : (
                <div class="w-full h-[320px] md:h-[400px] bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                  <span class="text-muted-foreground text-sm">Service image</span>
                </div>
              )}
              <div class="absolute bottom-4 left-4 right-4 md:left-auto md:right-4 md:w-auto bg-white rounded-xl shadow-xl p-4 flex items-center gap-3">
                <div class="flex gap-0.5">
                  {[1,2,3,4,5].map(() => (
                    <svg class="w-5 h-5 text-cta fill-cta" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                  ))}
                </div>
                <span class="font-display font-bold text-foreground">5-Star Rated</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- What We Do -->
    <section class="py-16 md:py-20 bg-gray-50">
      <div class="container-max px-4 md:px-8 lg:px-16">
        <div class="max-w-3xl mx-auto">
          <h2 class="font-display text-3xl md:text-4xl font-extrabold text-foreground mb-6">
            {content.whatWeDoTitle}
          </h2>
          <ul class="space-y-4">
            {content.whatWeDoItems.map((item) => (
              <li class="flex items-start gap-3">
                <svg class="w-6 h-6 text-primary flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                <span class="text-muted-foreground">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-16 md:py-20 bg-white">
      <div class="container-max px-4 md:px-8 lg:px-16">
        <h2 class="font-display text-3xl md:text-4xl font-extrabold text-foreground text-center mb-12">
          Why Choose Us
        </h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {content.whyChooseUs.map((item) => (
            <div class="bg-gray-50 rounded-2xl p-8 border border-border/50 text-center">
              <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center mx-auto mb-4">
                <svg class="w-7 h-7 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
              </div>
              <h3 class="font-display text-lg font-bold text-foreground mb-2">{item.title}</h3>
              <p class="text-muted-foreground text-sm leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="py-16 md:py-20 bg-gray-50">
      <div class="container-max px-4 md:px-8 lg:px-16">
        <h2 class="font-display text-3xl md:text-4xl font-extrabold text-foreground text-center mb-12">
          How It Works
        </h2>
        <div class="grid md:grid-cols-3 gap-8 lg:gap-12 max-w-5xl mx-auto">
          {content.howItWorks.map((item, index) => (
            <div class="relative text-center">
              <div class="bg-white rounded-2xl shadow-lg p-8 flex flex-col items-center h-full">
                <div class="relative w-20 h-20 rounded-2xl bg-primary/10 flex items-center justify-center mb-6">
                  <svg class="w-10 h-10 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                  <span class="absolute -top-2 -right-2 w-8 h-8 rounded-full bg-primary text-primary-foreground text-sm font-bold flex items-center justify-center">{item.step}</span>
                </div>
                <h3 class="font-display text-xl font-bold text-foreground mb-3">{item.title}</h3>
                <p class="text-muted-foreground leading-relaxed">{item.description}</p>
              </div>
            </div>
          ))}
        </div>
        <div class="text-center mt-12">
          <button type="button" data-open-quote="true" data-service={service.label} class="inline-flex items-center justify-center rounded-xl h-12 px-8 text-base font-semibold bg-primary !text-white hover:bg-primary/90 shadow-lg">
            Get a Free Quote
          </button>
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="section-padding bg-secondary">
      <div class="container-max">
        <div class="text-center max-w-3xl mx-auto mb-12">
          <h2 class="font-display text-3xl md:text-4xl font-extrabold text-foreground mb-4">
            What Our Customers Say
          </h2>
          <p class="text-lg text-muted-foreground">Don't just take our word for it</p>
        </div>
        <div class="grid md:grid-cols-2 gap-6 lg:gap-8 max-w-5xl mx-auto">
          {content.testimonials.map((t) => (
            <article class="bg-card rounded-xl border border-border p-6 flex flex-col">
              <div class="flex gap-1 mb-4">
                {[1,2,3,4,5].slice(0, t.rating).map(() => (
                  <svg class="w-5 h-5 fill-cta text-cta" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>
                ))}
              </div>
              <p class="text-muted-foreground flex-1 mb-4">"{t.quote}"</p>
              <div>
                <p class="font-semibold text-foreground">{t.author}</p>
                {t.location && <p class="text-sm text-muted-foreground">{t.location}</p>}
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- FAQ (optional; use details/summary if we add faqs to content later) -->
    {content.faqs && content.faqs.length > 0 && (
      <section class="py-16 md:py-20 bg-white">
        <div class="container-max px-4 md:px-8 lg:px-16">
          <h2 class="font-display text-3xl md:text-4xl font-extrabold text-foreground text-center mb-10">
            Frequently Asked Questions
          </h2>
          <div class="max-w-3xl mx-auto space-y-2">
            {content.faqs.map((faq) => (
              <details class="bg-card border border-border rounded-xl px-6 group">
                <summary class="font-display font-semibold text-foreground py-5 cursor-pointer list-none flex items-center justify-between gap-2 [&::-webkit-details-marker]:hidden">
                  {faq.q}
                  <span class="text-muted-foreground group-open:rotate-180 transition-transform shrink-0">â–¼</span>
                </summary>
                <p class="text-muted-foreground pb-5 leading-relaxed border-t border-border pt-2">{faq.a}</p>
              </details>
            ))}
          </div>
        </div>
      </section>
    )}
  </main>
</BaseLayout>
