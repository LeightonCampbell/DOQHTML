---
import BaseLayout from '../../../layouts/BaseLayout.astro';
const services = [
  { title: 'Smart Thermostats', href: '/services/smart-thermostats/', benefit: 'Save up to 23% on energy costs with intelligent temperature control. Professional installation ensures optimal performance.' },
  { title: 'Video Doorbells', href: '/services/video-doorbells/', benefit: 'See and speak with visitors from anywhere. Enhanced security and convenience with professional installation.' },
  { title: 'Smart Locks', href: '/services/smart-locks/', benefit: 'Keyless entry with smartphone control. Secure your home with modern technology installed by experts.' },
  { title: 'Smart Home Integration', href: '/services/smart-home-integration/', benefit: 'Unified control of all your smart devices. Seamless integration for a truly connected home experience.' },
];
---

<BaseLayout title="Smart Home | Installation & Setup Services | Deals Of Quality" description="Professional smart home installation services. Smart thermostats, video doorbells, smart locks, and home automation. Same-day service available." canonical="https://www.dealsofquality.com/services/smart-home/">
  <main class="min-h-screen bg-background">
    <section class="bg-secondary/30 relative overflow-hidden pt-24 pb-12 md:pt-32 md:pb-16">
      <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-accent/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2" />
      <div class="container-max px-4 md:px-8 lg:px-16 relative z-10">
        <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
          <div class="lg:max-w-lg">
            <h1 class="font-display text-4xl md:text-5xl font-bold text-foreground mb-4">Smart Home</h1>
            <p class="text-muted-foreground text-lg">Transform your home with smart technology. We install and configure all major smart home brands.</p>
          </div>
          <div class="w-80 h-52 bg-gradient-to-br from-accent/20 to-accent/5 rounded-2xl flex items-center justify-center">
            <svg class="w-32 h-32 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" /></svg>
          </div>
        </div>
      </div>
    </section>
    <section class="section-padding bg-background">
      <div class="container-max">
        <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-8">Our Smart Home Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {services.map((s) => (
            <a href={s.href} class="group bg-card border border-border rounded-xl p-6 block hover:border-accent/30 transition-colors">
              <h3 class="font-semibold text-foreground mb-2 group-hover:text-accent transition-colors">{s.title}</h3>
              <p class="text-sm text-muted-foreground leading-relaxed">{s.benefit}</p>
            </a>
          ))}
        </div>
        <div class="mt-10 text-center">
          <button type="button" data-open-quote class="inline-flex items-center justify-center rounded-md bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8 font-medium">Get a Free Quote</button>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
