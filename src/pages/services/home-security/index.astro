---
import BaseLayout from '../../../layouts/BaseLayout.astro';
const services = [
  { title: 'Security Cameras', href: '/security-cameras/', benefit: '24/7 surveillance and peace of mind. Professional camera installation with remote monitoring and smart alerts.' },
  { title: 'Video Doorbells', href: '/video-doorbells/', benefit: 'See and speak with visitors from anywhere. Enhanced security and convenience with professional installation.' },
  { title: 'Smart Locks', href: '/smart-locks/', benefit: 'Keyless entry with smartphone control. Secure your home with modern technology installed by experts.' },
  { title: 'Motion Sensors', href: '/motion-sensors/', benefit: 'Intelligent motion detection that alerts you to activity. Professional placement for maximum coverage and accuracy.' },
];
---

<BaseLayout title="Home Security | Camera & Smart Lock Installation | Deals Of Quality" description="Professional home security installation. Security cameras, video doorbells, smart locks, and motion sensors. Same-day service available." canonical="https://www.dealsofquality.com/services/home-security/">
  <main class="min-h-screen bg-background">
    <section class="bg-secondary/30 relative overflow-hidden pt-24 pb-12 md:pt-32 md:pb-16">
      <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-accent/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2" />
      <div class="container-max px-4 md:px-8 lg:px-16 relative z-10">
        <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
          <div class="lg:max-w-lg">
            <h1 class="font-display text-4xl md:text-5xl font-bold text-foreground mb-4">Home Security</h1>
            <p class="text-muted-foreground text-lg">Protect your home and family with professional security installations. Remote monitoring and smart alerts included.</p>
          </div>
          <div class="w-80 h-52 bg-gradient-to-br from-accent/20 to-accent/5 rounded-2xl flex items-center justify-center">
            <svg class="w-32 h-32 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
          </div>
        </div>
      </div>
    </section>
    <section class="section-padding bg-background">
      <div class="container-max">
        <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-8">Our Home Security Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {services.map((s) => (
            <a href={s.href} class="group bg-card border border-border rounded-xl p-6 block hover:border-accent/30 transition-colors">
              <h3 class="font-semibold text-foreground mb-2 group-hover:text-accent transition-colors">{s.title}</h3>
              <p class="text-sm text-muted-foreground leading-relaxed">{s.benefit}</p>
            </a>
          ))}
        </div>
        <div class="mt-10 text-center">
          <button type="button" data-open-quote class="inline-flex items-center justify-center rounded-md bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8 font-medium">Get a Free Quote</button>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
