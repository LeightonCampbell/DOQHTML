---
import BaseLayout from '../../../layouts/BaseLayout.astro';
const services = [
  { title: 'Computer Repair', href: '/computer-repair/', benefit: 'Fast, reliable computer repairs for all makes and models. Get your device working again without the hassle.' },
  { title: 'Virus Removal', href: '/virus-removal/', benefit: 'Complete virus and malware removal with system protection. Restore your computer\'s performance and security.' },
  { title: 'Printer Setup', href: '/printer-setup/', benefit: 'Professional printer installation and configuration. Get printing from all your devices quickly and easily.' },
  { title: 'Data Backup', href: '/data-backup/', benefit: 'Protect your important files with automated backup solutions. Never lose your data again with professional setup.' },
];
---

<BaseLayout title="Computers & Printers | Repair & Setup Services | Deals Of Quality" description="Professional computer and printer services. Computer repair, virus removal, printer setup, and data backup solutions. Same-day service available." canonical="https://www.dealsofquality.com/services/computers-printers/">
  <main class="min-h-screen bg-background">
    <section class="bg-secondary/30 relative overflow-hidden pt-24 pb-12 md:pt-32 md:pb-16">
      <div class="absolute top-0 right-0 w-[400px] h-[400px] bg-accent/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2" />
      <div class="container-max px-4 md:px-8 lg:px-16 relative z-10">
        <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
          <div class="lg:max-w-lg">
            <h1 class="font-display text-4xl md:text-5xl font-bold text-foreground mb-4">Computers & Printers</h1>
            <p class="text-muted-foreground text-lg">Expert computer repair and printer setup services. We fix, optimize, and protect your devices.</p>
          </div>
          <div class="w-80 h-52 bg-gradient-to-br from-accent/20 to-accent/5 rounded-2xl flex items-center justify-center">
            <svg class="w-32 h-32 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
          </div>
        </div>
      </div>
    </section>
    <section class="section-padding bg-background">
      <div class="container-max">
        <h2 class="font-display text-2xl md:text-3xl font-bold text-foreground mb-8">Our Computer & Printer Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {services.map((s) => (
            <a href={s.href} class="group bg-card border border-border rounded-xl p-6 block hover:border-accent/30 transition-colors">
              <h3 class="font-semibold text-foreground mb-2 group-hover:text-accent transition-colors">{s.title}</h3>
              <p class="text-sm text-muted-foreground leading-relaxed">{s.benefit}</p>
            </a>
          ))}
        </div>
        <div class="mt-10 text-center">
          <button type="button" data-open-quote class="inline-flex items-center justify-center rounded-md bg-primary text-primary-foreground hover:bg-primary/90 h-11 px-8 font-medium">Get a Free Quote</button>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
