---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSearchForm from '../components/HeroSearchForm.astro';
import ServiceGrid from '../components/ServiceGrid.astro';
import Process from '../components/Process.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import VerifiedReviews from '../components/VerifiedReviews.astro';
import FAQ from '../components/FAQ.astro';
import TipsUpdates from '../components/TipsUpdates.astro';
import CTA from '../components/CTA.astro';
import MobileBookingFooter from '../components/MobileBookingFooter.astro';
const canonical = 'https://www.dealsofquality.com/';
---

<BaseLayout
  title="Deals of Quality – Expert Home Services on Demand"
  description="Trusted by 10,000+ homeowners. Fast, reliable, and vetted local pros for every essential home service need in Los Angeles. Get a free quote in minutes."
  canonical={canonical}
>
  <!-- Hero: previous design – centered content, quote form, dark overlay, extends under header -->
  <section
    id="get-quote"
    class="hero-restored relative -mt-16 min-h-[90vh] overflow-hidden bg-slate-800 pt-16"
    aria-labelledby="hero-heading"
  >
    <div
      class="hero-bg-image absolute inset-0 bg-cover bg-no-repeat"
      style="background-image: url('/images/hero-professional.png'); background-position: 82% center;"
    />
    <div
      class="absolute inset-0 bg-gradient-to-r from-slate-900/75 via-slate-900/65 to-slate-800/55"
      aria-hidden="true"
    />

    <div class="relative z-10 flex min-h-[calc(90vh-4rem)] flex-col items-center justify-center px-4 pb-28 pt-6 text-center sm:px-6 sm:pb-32 sm:pt-8 lg:px-8">
      <p class="mb-6 inline-flex items-center gap-2 rounded-full bg-white/10 px-4 py-2 text-sm font-medium text-white backdrop-blur-sm">
        <span class="text-[#0073e6]" aria-hidden="true">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        </span>
        Trusted by 10,000+ homeowners
      </p>

      <h1 id="hero-heading" class="max-w-3xl text-3xl font-bold tracking-tight text-white sm:text-4xl lg:text-5xl">
        Trusted Local Pros for Any Project
        <span class="mt-2 block text-[#0073e6]">Get a Quote in Minutes</span>
      </h1>
      <p class="mx-auto mt-4 max-w-xl text-lg text-slate-300 lg:max-w-4xl">
        Fast, reliable, and vetted local pros for every essential home service need.
      </p>

      <div class="mt-8 w-full max-w-md">
        <HeroSearchForm />
      </div>
    </div>

    <div
      class="absolute bottom-0 left-0 right-0 z-10 border-t border-white/10 bg-slate-900/95 backdrop-blur-sm"
      role="list"
      aria-label="Service guarantees"
    >
      <ul class="mx-auto flex max-w-5xl flex-wrap items-center justify-center gap-x-8 gap-y-3 px-4 py-4 text-sm text-white sm:gap-x-12">
        <li class="flex items-center gap-2">
          <span class="flex h-8 w-8 items-center justify-center rounded-full bg-[#0073e6]/20 text-[#0073e6]" aria-hidden="true">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
          </span>
          Background Checked
        </li>
        <li class="flex items-center gap-2">
          <span class="flex h-8 w-8 items-center justify-center rounded-full bg-[#0073e6]/20 text-[#0073e6]" aria-hidden="true">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
          </span>
          Licensed & Insured
        </li>
        <li class="flex items-center gap-2">
          <span class="flex h-8 w-8 items-center justify-center rounded-full bg-[#0073e6]/20 text-[#0073e6]" aria-hidden="true">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
          </span>
          Satisfaction Guaranteed
        </li>
        <li class="flex items-center gap-2">
          <span class="flex h-8 w-8 items-center justify-center rounded-full bg-[#0073e6]/20 text-[#0073e6]" aria-hidden="true">
            <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
          </span>
          Same-Day Service Available
        </li>
      </ul>
    </div>
  </section>

  <ServiceGrid />

  <Process />
  <WhyChooseUs />
  <VerifiedReviews />
  <FAQ />
  <TipsUpdates />
  <CTA />
  <MobileBookingFooter />

  <style>
    @media (max-width: 768px) {
      .hero-bg-image {
        background-position: center center !important;
      }
    }
  </style>
</BaseLayout>
