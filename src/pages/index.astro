---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroSearchForm from '../components/HeroSearchForm.astro';
import ServiceGrid from '../components/ServiceGrid.astro';
import Process from '../components/Process.astro';
import WhyChooseUs from '../components/WhyChooseUs.astro';
import VerifiedReviews from '../components/VerifiedReviews.astro';
import FAQ from '../components/FAQ.astro';
import TipsUpdates from '../components/TipsUpdates.astro';
import CTA from '../components/CTA.astro';
import MobileBookingFooter from '../components/MobileBookingFooter.astro';
const canonical = 'https://www.dealsofquality.com/';
---

<BaseLayout
  title="Deals of Quality â€“ Expert Home Services on Demand"
  description="Trusted by 10,000+ homeowners. Fast, reliable, and vetted local pros for every essential home service need in Los Angeles. Get a free quote in minutes."
  canonical={canonical}
>
  <!-- Hero: full-bleed to top of viewport (under fixed Navbar), content padded to clear header -->
  <section
    id="get-quote"
    class="hero-section relative w-full overflow-hidden min-h-[70vh] md:min-h-[75vh] lg:min-h-[80vh]"
    aria-label="Hero section - Find local professionals"
  >
    <div class="absolute inset-0">
      <img
        src="/images/hero-professional.png"
        alt=""
        class="w-full h-full object-cover object-center"
        loading="eager"
        fetchpriority="high"
        aria-hidden="true"
      />
      <div
        class="absolute inset-0 bg-gradient-to-r from-slate-900/90 via-slate-900/70 to-slate-900/20 lg:via-slate-900/50 lg:to-transparent"
        aria-hidden="true"
      />
    </div>

    <div class="container-max px-4 relative z-10 pt-8 pb-8 md:pt-12 md:pb-12 lg:pt-16 lg:pb-16">
      <div class="max-w-xl mx-auto lg:mx-0 lg:max-w-lg">
        <!-- Social proof badge -->
        <div class="flex items-center justify-center lg:justify-start gap-2 bg-white/10 backdrop-blur-sm text-white/90 px-4 py-2 rounded-full text-sm font-medium mb-6 w-fit mx-auto lg:mx-0 border border-white/20">
          <svg class="w-4 h-4 flex-shrink-0 text-[#0073e6]" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <span>Trusted by 10,000+ homeowners</span>
        </div>

        <h1 class="font-display text-2xl sm:text-[1.75rem] md:text-3xl lg:text-4xl font-bold text-white leading-tight mb-4 tracking-tight text-center lg:text-left">
          <span class="block">Trusted Local Pros for Any Project</span>
          <span class="block text-[#0073e6] mt-1">Get a Quote in Minutes</span>
        </h1>

        <p class="text-[17px] text-white/80 mb-6 max-w-md mx-auto lg:mx-0 text-center lg:text-left">
          Fast, reliable, and vetted local pros for every essential home service need.
        </p>

        <div class="w-full max-w-2xl mx-auto lg:mx-0">
          <HeroSearchForm />
        </div>
      </div>
    </div>
  </section>

  <!-- Trust strip (React parity): div not section so #main-content section { padding } does not apply -->
  <div class="trust-strip relative z-10 bg-slate-900/95 backdrop-blur-sm border-t border-white/10" role="region" aria-label="Trust and quality guarantees">
    <div class="container-max px-4 py-4">
      <div class="flex flex-wrap items-center justify-center gap-x-4 md:gap-x-6 lg:gap-x-8 gap-y-3">
        <div class="flex items-center gap-2 text-xs md:text-sm">
          <svg class="w-3 h-3 md:w-4 md:h-4 flex-shrink-0 text-[#0073e6]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>
          <span class="text-white/90 font-medium whitespace-nowrap">Background Checked</span>
        </div>
        <div class="flex items-center gap-2 text-xs md:text-sm">
          <svg class="w-3 h-3 md:w-4 md:h-4 flex-shrink-0 text-[#0073e6]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
          <span class="text-white/90 font-medium whitespace-nowrap">Licensed & Insured</span>
        </div>
        <div class="flex items-center gap-2 text-xs md:text-sm">
          <svg class="w-3 h-3 md:w-4 md:h-4 flex-shrink-0 text-[#0073e6]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" /></svg>
          <span class="text-white/90 font-medium whitespace-nowrap">Satisfaction Guaranteed</span>
        </div>
        <div class="flex items-center gap-2 text-xs md:text-sm">
          <svg class="w-3 h-3 md:w-4 md:h-4 flex-shrink-0 text-[#0073e6]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          <span class="text-white/90 font-medium whitespace-nowrap">Same-Day Service Available</span>
        </div>
      </div>
    </div>
  </div>

  <ServiceGrid />
  <Process />
  <WhyChooseUs />
  <VerifiedReviews />
  <FAQ />
  <TipsUpdates />
  <CTA />
  <MobileBookingFooter />

  <style>
    @media (max-width: 768px) {
      .hero-section img {
        object-position: center center;
      }
    }
  </style>
</BaseLayout>
