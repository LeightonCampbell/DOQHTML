// Sticky mobile CTA bar â€“ visible after user scrolls to #popular-services. Buttons use data-open-quote for global modal.
---

<div id="mobile-booking-footer" class="fixed bottom-0 left-0 right-0 bg-card border-t border-border p-4 md:hidden z-50 shadow-lg hidden" aria-label="Mobile booking actions">
  <div class="flex gap-3">
    <a
      href="tel:+18185847389"
      class="flex-1 flex items-center justify-center gap-2 h-12 rounded-lg border border-border bg-background text-foreground font-semibold text-sm"
      aria-label="Call us at (818) 584-7389"
    >
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
      </svg>
      Call Now
    </a>
    <button
      type="button"
      data-open-quote
      class="flex-1 h-12 rounded-lg bg-accent hover:bg-accent/90 text-accent-foreground font-semibold text-sm focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2"
      aria-label="Get a free quote for your project"
    >
      Get Free Quote
    </button>
  </div>
</div>

<!-- Spacer so content isn't hidden behind sticky bar on mobile -->
<div id="mobile-booking-footer-spacer" class="h-20 md:hidden hidden" aria-hidden="true"></div>

<script>
  (function () {
    var footer = document.getElementById('mobile-booking-footer');
    var spacer = document.getElementById('mobile-booking-footer-spacer');
    var target = document.getElementById('popular-services');
    if (!footer || !spacer) return;

    function updateVisibility() {
      if (!target) {
        footer.classList.add('hidden');
        spacer.classList.add('hidden');
        return;
      }
      var rect = target.getBoundingClientRect();
      var isPast = rect.top <= window.innerHeight;
      if (isPast) {
        footer.classList.remove('hidden');
        spacer.classList.remove('hidden');
      } else {
        footer.classList.add('hidden');
        spacer.classList.add('hidden');
      }
    }

    updateVisibility();
    window.addEventListener('scroll', updateVisibility, { passive: true });
    window.addEventListener('resize', updateVisibility);
  })();
</script>
