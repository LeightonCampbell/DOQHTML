---
import { Image } from 'astro:assets';

const currentYear = new Date().getFullYear();

const homeTrades = [
  { label: "Plumbing", href: "/services/plumbing/" },
  { label: "Electrical", href: "/services/electrical/" },
  { label: "Handyman Services", href: "/services/handyman-services/" },
  { label: "House Cleaning", href: "/services/house-cleaning/" },
];

const techAndSmartHome = [
  { label: "TV Mounting", href: "/services/tv-mounting/" },
  { label: "Wi-Fi & Network", href: "/services/router-setup/" },
  { label: "Security Cameras", href: "/services/security-cameras/" },
  { label: "Smart Home", href: "/services/smart-home-integration/" },
];

const quickLinks = [
  { label: "FAQs", href: "/faqs/" },
  { label: "Articles", href: "/articles/" },
  { label: "Join as a Pro", href: "/join-as-pro/" },
  { label: "Remote Support", href: "/remote-support/" },
  { label: "Contact Us", href: "/contact/" },
];

const socialLinks = [
  { label: "Facebook", href: "https://www.facebook.com/doquality" },
  { label: "Twitter", href: "https://x.com/dealsofquality" },
  { label: "LinkedIn", href: "https://linkedin.com/company/doquality/" },
  { label: "Instagram", href: "https://www.instagram.com/doquality" },
];
---

<footer class="bg-foreground text-background text-sm" role="contentinfo">
  <!-- Main Footer -->
  <div class="section-padding !py-16">
    <div class="container-max max-w-6xl mx-auto">
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-10 lg:gap-8 justify-items-center md:justify-items-start">
        <!-- Brand Column -->
        <div class="lg:col-span-1 text-center md:text-left">
          <a href="/" class="inline-block mb-6" aria-label="DoQuality - Home">
            <Image
              src="/images/logo-light.png"
              alt="DoQuality - Smart, Fast, Reliable"
              class="h-10 w-auto"
              width={125}
              height={40}
              loading="lazy"
            />
          </a>
          <p class="text-background/70 mb-6 leading-relaxed text-xs md:text-sm">
            Your trusted partner for premium home services and smart technology.
          </p>

          <!-- Social Links -->
          <div class="flex gap-3 justify-center md:justify-start">
            <a
              href={socialLinks[0].href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-background/10 hover:bg-accent flex items-center justify-center transition-colors duration-300 text-background"
              aria-label={socialLinks[0].label}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </a>
            <a
              href={socialLinks[1].href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-background/10 hover:bg-accent flex items-center justify-center transition-colors duration-300 text-background"
              aria-label={socialLinks[1].label}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            </a>
            <a
              href={socialLinks[2].href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-background/10 hover:bg-accent flex items-center justify-center transition-colors duration-300 text-background"
              aria-label={socialLinks[2].label}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            </a>
            <a
              href={socialLinks[3].href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full bg-background/10 hover:bg-accent flex items-center justify-center transition-colors duration-300 text-background"
              aria-label={socialLinks[3].label}
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            </a>
          </div>
        </div>

        <!-- Services Column -->
        <nav aria-label="Services" class="text-center md:text-left">
          <h3 class="font-display font-bold text-base md:text-lg mb-4 md:mb-5">Home Services</h3>
          <div class="space-y-6">
            <div>
              <ul class="space-y-2">
                {homeTrades.map((service) => (
                  <li>
                    <a href={service.href} class="text-background/70 hover:text-accent transition-colors duration-200">
                      {service.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
            <div>
              <p class="font-semibold text-background/90 mb-2 text-xs md:text-sm tracking-wide">Smart Home</p>
              <ul class="space-y-2">
                {techAndSmartHome.map((service) => (
                  <li>
                    <a href={service.href} class="text-background/70 hover:text-accent transition-colors duration-200">
                      {service.label}
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </nav>

        <!-- Quick Links Column -->
        <nav aria-label="Quick links" class="text-center md:text-left">
          <h3 class="font-display font-bold text-base md:text-lg mb-4 md:mb-5">Quick Links</h3>
          <ul class="space-y-2.5 md:space-y-3">
            {quickLinks.map((link) => (
              <li>
                <a href={link.href} class="text-background/70 hover:text-accent transition-colors duration-200">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>

        <!-- Contact Column -->
        <div class="text-center md:text-left">
          <h3 class="font-display font-bold text-base md:text-lg mb-4 md:mb-5">Contact Us</h3>
          <ul class="space-y-4">
            <li>
              <a href="tel:+18185847389" class="flex items-center gap-3 text-background/70 hover:text-accent transition-colors justify-center md:justify-start">
                <svg class="w-5 h-5 text-accent flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                (818) 584-7389
              </a>
            </li>
            <li>
              <a href="/contact/" class="flex items-center gap-3 text-background/70 hover:text-accent transition-colors justify-center md:justify-start">
                <svg class="w-5 h-5 text-accent flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
                Send us a message
              </a>
            </li>
            <li class="flex items-start gap-3 text-background/70 justify-center md:justify-start">
              <svg class="w-5 h-5 text-accent flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>Serving Customers Near You</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-background/10 py-6">
    <div class="container-max px-4">
      <div class="flex flex-col md:flex-row items-center justify-center md:justify-between gap-4 text-center md:text-left">
        <p class="text-background/50">
          Deals of Quality, LLC | Copyright Â© {currentYear}. All rights reserved.
        </p>
        <div class="flex gap-4">
          <a href="/terms/" class="text-background/50 hover:text-accent transition-colors">Terms of Service</a>
          <a href="/privacy/" class="text-background/50 hover:text-accent transition-colors">Privacy Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>
