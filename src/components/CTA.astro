<section id="quote" class="section-padding hero-gradient relative overflow-hidden" aria-labelledby="cta-heading">
  <div class="absolute inset-0 opacity-10" aria-hidden="true">
    <div class="absolute top-10 right-10 w-64 h-64 bg-primary-foreground rounded-full blur-3xl" />
    <div class="absolute bottom-10 left-10 w-80 h-80 bg-accent rounded-full blur-3xl" />
  </div>

  <div class="container-max relative z-10">
    <div class="max-w-3xl mx-auto text-center">
      <h2 id="cta-heading" class="font-display text-[35px] font-extrabold text-primary-foreground mb-6">
        Ready to Transform Your Home?
